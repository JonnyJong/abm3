.page-item
  padding-bottom 16px
.page-item-header
  position relative
  height 80vh
  margin-top -50px
  overflow hidden
  img
    position absolute
    opacity 0
    height 100%
    width 100%
    object-fit cover
    left 0
    top calc(var(--top) / 2)
    animation item-header 1s cubic-bezier(0, 0, 0, 1)
    transition opacity .1s
  .show
    opacity 1
  &:after
    content ''
    display block
    background linear-gradient(#0000, var(--bg))
    width 100%
    position absolute
    bottom 0
    height calc(140px + var(--top, 0px) * 2)
.page-item-info
  margin-top -100px
  position relative
  display flex
  padding 0 50px
  gap 30px
  .cover
    width 300px
    height 400px
    position relative
    .show
      opacity 1
  img
    width 100%
    height 100%
    border-radius var(--border-radius)
    object-fit cover
    opacity 0
    position absolute
    top 0
    left 0
    transition opacity .1s
  .title
    font-weight bold
    font-size 32px
    user-select text
  .categorize
  .tags
    display flex
    flex-wrap wrap
    align-items center
    gap 8px
    margin 10px 0
    &:before
      content '\e907'
      font-family 'icon'
      font-size 20px
  .tags
    &:before
      content '\e906'
  .evaluation
    display flex
    gap 4px
    margin 10px 0
    .icon
      font-size 20px
  .stars
    display flex
    flex-direction row-reverse
  .icon-heart
  .icon-star
    &:before
      opacity .75
    &:hover:before
    &:hover~*:before
      opacity 1
  [data-stars="5"]
    .icon-star:before
      content '\e915'
  [data-stars="4"]
    .icon-star:nth-child(1)~*:before
      content '\e915'
  [data-stars="3"]
    .icon-star:nth-child(2)~*:before
      content '\e915'
  [data-stars="2"]
    .icon-star:nth-child(3)~*:before
      content '\e915'
  [data-stars="1"]
    .icon-star:nth-child(4)~*:before
      content '\e915'
  .progress
    margin 10px 0
    position relative
    min-width 370px
    &>*
      position absolute
      width 100%
      top 0
      left 0
      opacity 0
      transition opacity .1s
    .show
      opacity 1
    .info
      display flex
      justify-content space-between
      margin-bottom 4px
    .determinate
      height 4px
      border-radius var(--border-radius)
      background var(--theme-color)
      &:before
        content ''
        position absolute
        width 100%
        display block
        background var(--theme-color)
        border-radius var(--border-radius)
        opacity .25
        height 4px
.page-item-content
  margin 16px 50px 0
  padding 18px 24px
  background var(--block-bg)
  border-radius var(--border-radius)
  border var(--block-border)