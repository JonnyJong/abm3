.titlebar
  width 100vw
  height 50px
  display flex
  align-items center
  app-region drag
  position fixed
  top 0
  z-index 100
  position relative
  &>*
    flex 0 0 auto
    z-index 1
  &:before
    content ''
    display block
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    right 0
    bottom 0
    background var(--titlebar-bg)
    backdrop-filter blur(100px) saturate(1.8)
// .history-control
