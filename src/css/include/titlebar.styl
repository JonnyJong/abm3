.searchbar
  flex auto
  padding-left 74px
  transition .1s padding
.show-history-back .searchbar
  padding-left 32px
.show-history-home .searchbar
  padding-left 0px
  padding-right 10px
  @media screen and (max-width:950px)
    padding-left 10px
    padding-right 0px
.show-history-back .history-control-back
.show-history-home .history-control-home
  margin-left 6px
  opacity 1
  pointer-events all