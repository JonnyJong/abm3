.searchbar
  flex auto
.window-control
  app-region no-drag
  height 50px
  display flex
.window-control-minimize
.window-control-resize
.window-control-close
  width 46px
  height 32px
  &:hover
    background #8884
  &:active
    background #8882
.window-control-close
  &:hover
    background #e11
  &:active
    background #e11a