.home-recommendation
  position relative
  height calc(min(60vh, 600px) + 100px)
  .background
    height calc(min(80vh, 800px) + 150px)
    width 100%
    position absolute
    overflow hidden
    top -50px
    --size 100vw
    ui-spotlight
      position absolute
      height 100%
      width 100%
      top 0
      left 0
      --size 100vw
    img
      position absolute
      height 100%
      width calc(100% + 80px)
      object-fit cover
      left -40px
      top 0
      filter blur(40px)
      animation home-rcm-bg-breathe 3s infinite alternate linear
    &:after
      content ''
      position relative
      display block
      height 100%
      width 100%
      top 0
      left 0
      background-image radial-gradient(farthest-side, #0000, var(--home-rcm-bg) 60%, var(--home-rcm-bg-c)), linear-gradient(#0000 80%, var(--bg))
      background-size 200vw 200vh, 100%, 100%
      background-position 0 50%, 0 0
  .info
    position relative
    padding 35px 55px
    height 100%
    display flex
    justify-content space-between
  .cover
    height 100%
    object-fit cover
    width calc((min(60vh, 600px) + 30px) / 4 * 3)
    box-shadow 0 0 30px #fff2
    transition 1s box-shadow
    &:hover
      box-shadow 0 0 30px #fff6
  .title
    font-size 40px
    margin 0
  .info-left
    display flex
    flex-direction column
    justify-content center
    align-items flex-start
    gap 16px
  .subtitle
    font-size 16px
    color var(--home-rcm-sub)
  button
    font-weight bold
    font-size 18px
    padding 10px 40px
    background #fff1
    border 1px solid #8881
    border-top 1px solid #fff1
    box-shadow 0 2px 2px #0004
    transition 0.2s background
    position relative
    overflow hidden
    &:hover
      background var(--home-rcm-btn-hover)
    &:active
      background var(--home-rcm-btn-active)
      transition .1s background
    &:before
      content ''
      display block
      position absolute
      top -100%
      left -100%
      height 300%
      width 100%
      background linear-gradient(to right, #fff0, #fff6, #fff0)
      rotate 10deg
      animation home-rcm-button 1.5s 2s
.home-recommendation-nothing
  height 250px
  .info
    justify-content flex-start
  .background
    height 350px
    &:before
      content ''
      position absolute
      height 100%
      width 100%
      left 0
      top 0
      background var(--theme-color)
.home-library
  position relative
  padding 35px 55px
  h1
    margin 0
    font-size 24px
  .detail
    color var(--home-lib-dtl)
    margin-bottom 8px
  .progress
    width 100%
    height 3px
    position relative
    margin-bottom 12px
    &:before
    &:after
      content ''
      position absolute
      display block
      left 0
      top 0
      width 100%
      height 100%
      border-radius 3px
      background var(--theme-color)
      opacity .25
    &:after
      width var(--p)
      opacity 1