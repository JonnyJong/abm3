// .item-list-container
.pagination
  display flex
  justify-content flex-end
  gap 10px
  &>*
    border-radius var(--border-radius)
    width 30px
    height 30px
    text-align center
    line-height 30px
.item-list
  margin auto
  display flex
  flex-wrap wrap
.item
  padding 14px
  border-radius var(--border-radius)
  transition .2s ease box-shadow, .2s ease background, .2s ease transform
  &:hover
    box-shadow 0 4px 8px #0008
    transform translateY(-4px)
    background #272727
  &:active
    transform translateY(-4px) scale(.98)
  img
    height 320px
    width 240px
    object-fit cover
    border-radius var(--border-radius)
  .info
    margin-top 4px
    width 240px
    display flex
    flex-direction column
    gap 4px
  .title
    font-size 16px
  .evaluation
    opacity .8
    display flex
    gap 8px
  .mark
    display flex
    gap 4px
    flex-wrap wrap