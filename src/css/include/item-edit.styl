.item-edit
  display flex
  flex-direction column
  gap 16px
  // overflow hidden
  h2
    margin 0
  ui-array
    width 50%
    min-height 100%
    position relative
    padding-bottom 44px
    input
      position absolute
      bottom 0
  textarea
    resize vertical
    min-height 400px
    max-height calc(100vh - 200px)
.item-edit-seasons
  width 100% !important
  padding-bottom 32px
.item-edit-season
  width calc(50% - 4px)
  display flex
  flex-direction column
  gap 16px
  padding 20px 26px
  border-radius var(--border-radius)
  background var(--block-bg)
  border var(--block-border)
  &.icon-add
    height 334px
    text-align center
    line-height 294px
    font-size 64px
    &:not(:hover)
      background #0000
.item-edit-grab-season
  height 16px
  position relative
  &:before
    content ''
    display block
    position absolute
    height 2px
    width 100%
    top 6px
    background #8884
    transition .1s top, .1s height
  &:hover
  &:active
    &:before
      top 0px
      height 16px
.edit-item-link
  min-height 34px
.item-edit-grab-link
  width 16px
  height 28px
  position relative
  &:before
    content ''
    display block
    position absolute
    width 2px
    height 100%
    left 6px
    background #8884
    transition .1s left, .1s width
  &:hover
  &:active
    &:before
      left 0px
      width 16px