.icon
  font-size 16px

.input
  position relative
  input
    border var(--input-border)
    border-bottom var(--input-border-bottom)
    background var(--input-bg)
    height 36px
    border-radius var(--border-radius)
    width 100%
    padding 0 36px
    color var(--font-color)
    &::placeholder
      color #cfcfcf
    &:hover
      background var(--input-bg-hover)
    &:focus
      background var(--input-bg-focus)
      border-bottom var(--input-border-bottom-focus)
      outline 0
      &::placeholder
        color #969696
  .input-left
  .input-right
    position absolute
    margin 3px
    height 30px
    width 30px
    line-height 30px
    text-align center
    border-radius var(--border-radius)
    transition .1s transform
    &:hover
      background #8882
    &:active
      transform scale(.9)
  .input-left
    left 0
  .input-right
    right 0
button
  height 32px
  background var(--button-bg)
  color var(--font-color)
  border var(--button-border)
  border-bottom var(--button-border-bottom)
  outline none
  padding 8px 12px
  height max-content
  border-radius 6px
  app-region no-drag
  white-space nowrap
  transition .1s background
  line-height 1.4rem
  &:hover:not(:disabled)
    background var(--button-bg-hover)
  &:active:not(:disabled)
    background var(--button-bg-active)
  &:disabled
    border var(--button-border-disabled)
    background var(--button-bg-disabled)
    color var(--button-color-disabled)

::-webkit-scrollbar
  display none

::selection
  background var(--theme-color)
  color var(--theme-font-color)

.menu-group:not(:first-child)
.menu-items
  position relative
  &:not(:empty)
    padding-top 2px
    &:before
      content ''
      height 1px
      top -2px
      width 100%
      background #8884
      display block
      position absolute
.menu-items
  padding 4px
  outline 0
.menu-group
  display flex
  flex-direction column
  gap 2px
  &:not(:last-child)
    padding-bottom 6px
.menu-item
  all unset
  display flex
  border-radius var(--border-radius)
  height 29px
  align-items center
  i
    width 29px
    flex 0 0 auto
    text-align center
  &:hover:not(:disabled)
  &:focus:not(:disabled)
    background #8884
  &:active:not(:disabled)
    background #8882
.menu-no-hover .menu-item
  &:hover:not(:disabled):not(:focus)
    background #8880
.menu-name
  width calc(100% - 29px)