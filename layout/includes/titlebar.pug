.titlebar
  .history
    button.history-back.btn-clear
      .icon.icon-ChevronLeft
    button.history-home.btn-clear
      .icon.icon-Home
  .app-info
    img.app-icon(src="../assets/icons/64.png" draggable="false")
    ui-lang.app-name app.name
  .search
    .search-input
      .search-page
        .icon.icon-Search
      input(type="text" lang="placeholder" lang-key="search.type_to_search")
      .search-clear
        .icon.icon-Clear
  .user
    img.user-avatar(src="../assets/defaultAvatar.bmp" draggable="false")
.window
  .window-minimize
    .icon.icon-ChromeMinimize
  .window-resize
    .icon.icon-ChromeRestore
    .icon.icon-ChromeMaximize
  .window-close
    .icon.icon-ChromeClose
