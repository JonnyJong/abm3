{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "strict": true,
    "rootDir": "./ts",
    "outDir": "./scripts",
    "sourceMap": true,
    "pretty": false,
    "removeComments": true
  },
  "compileOnSave": true,
  "include": [
    "./ts/**/*"
  ],
  "exclude": [
    "./scripts"
  ]
}
