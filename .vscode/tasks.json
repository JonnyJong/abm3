{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "label": "tsc: watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "label": "tsc: build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "shell",
      "label": "pug",
      "command": "pug ./layout/index.pug",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "build",
      "dependsOrder": "parallel",
      "dependsOn": ["tsc: watch", "pug"]
    }
  ]
}
