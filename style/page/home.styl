@keyframes rcmd-bg
  from
    opacity .8
  to
    opacity .7
@keyframes rcmd-check
  from
    left -200%
  to
    left 100%
.page-home
  padding 0 0 32px 0
.rcmd
  position relative
  padding 128px
  .ui-width
    position relative
    display flex
    justify-content space-between
    gap 64px
  &:not(:has(.rcmd-bg-blur)):after
    content ''
    display block
    position absolute
    top 0
    left 0
    height calc(100% + 128px)
    width 100%
    background-image radial-gradient(farthest-side, #0000, var(--bg-tsp3) 60%, var(--bg-tsp2)), linear-gradient(#0000 80%, var(--bg))
    background-size: 200vw 200vh, 100%, 100%
    background-position: 0 50%, 0 0
.rcmd-bg
  position absolute
  top 0
  left -64px
  width 100%
  height calc(100% + 128px)
  object-fit cover
.rcmd-bg-blur
  width calc(100% + 128px)
  height 100%
  filter blur(64px)
  animation rcmd-bg 5s infinite alternate
.rcmd-info
  position relative
  display flex
  flex-direction column
  justify-content center
  gap 16px
  z-index 1
.rcmd-title
  font-size 48px
  font-weight 300
.rcmd-subtitle
  font-weight calc(370 * var(--weight-factor))
  opacity .8
.rcmd-check
  width max-content
  border-radius 6px
  padding 16px 24px
  font-size 18px
  font-weight 400
  overflow hidden
  position relative
  background var(--rcmd-check-bg)
  transition .2s background, .1s color, .3s scale
  &:after
    content ''
    position absolute
    height 100%
    width 200%
    top 0
    left 100%
    background linear-gradient(to right, #0000, var(--color), #0000)
    animation rcmd-check 1s 1s
    opacity .3
  &:hover
    background var(--rcmd-check-bg-hover)
  &:active
    background var(--rcmd-check-bg-active)
    color var(--btn-color-active)
    scale .97
.rcmd-cover
  position relative
  height 600px
  width 450px
  object-fit cover
  border-radius 6px
  z-index 1
.display-rack-control
  position relative
  display flex
  justify-content flex-end
.display-rack
  position relative
  &>*
    margin-top 16px
.home-rack-sort-items
  width 400px
.home-rack-sort-item
  display flex
  align-items center
  gap 8px
  border-radius 6px
  padding 8px
  transition .1s background
  &:hover
    background var(--bg3)
.home-rack-sort-item-name
  flex 1
.home-rack-sort-item-up
.home-rack-sort-item-down
.home-rack-sort-item-remove
  padding 8px
  border-radius 6px
  transition .1s background, .1s color
  &:hover
    background var(--btn-bg-hover)
  &:active
    background var(--btn-bg-active)
    color var(--btn-color-active)
