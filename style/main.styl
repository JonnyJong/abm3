@import 'var'
@font-face
  font-family NotoSans
  src url('../assets/font/NotoSansCJKsc-VF.ttf')
  font-display swap
*
  box-sizing border-box
body
  margin 0
  user-select none
  background var(--bg)
  color var(--color)
  font-family NotoSans
  font-weight calc(400 * var(--weight-factor))
  transition .1s background, .1s color

.ui-width
.ui-width2
  width 1920px
  max-width s('min(100%, calc(100vw - 64px))')
  margin auto
.ui-width2
  width 1080px

.ui-hider
  position fixed
  z-index 10
  top 0
  left 0
  height 100vh
  width 1000vw
  pointer-events none
.ui-hider-show
  pointer-events all

::selection
  background var(--theme)
  color var(--select)

::-webkit-scrollbar
  display none

@import 'ui/*'
@import 'includes/*'
@import 'page/*'
