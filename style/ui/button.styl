button
  all unset
  display inline-flex
  align-items center
  box-sizing border-box
  padding 10px 12px
  border 1px solid #0000
  border-radius 6px
  transition .1s border, .2s background, .1s scale
  font-family NotoSans
  position relative
  line-height 1
  gap 8px
  &:not(.btn-clear)
    background var(--btn-bg)
    border-color var(--btn-border)
    border-top-color var(--btn-border-top)
    border-bottom-color var(--btn-border-bottom)
    &[disabled]
      background var(--btn-bg-disabled)
      border-color var(--btn-border-disabled)
  &[disabled]
    color var(--btn-color-disabled)
  &:hover:not([disabled])
    background var(--btn-bg-hover)
    border-color var(--btn-border)
    border-top-color var(--btn-border-top)
    border-bottom-color var(--btn-border-bottom)
    .tooltip
      opacity 1
      transition .1s opacity 1s
  &:active:not([disabled])
    background var(--btn-bg-active)
    border-color var(--btn-border)
    border-top-color var(--btn-border-top-active)
    border-bottom-color var(--btn-border-bottom-active)
    color var(--btn-color-active)
    // scale .92
  .tooltip
    top -100%
    left 0
    right 0
  &.btn-accent
    --btn-bg var(--theme)
    --btn-bg-hover var(--theme-hover)
    --btn-bg-active var(--theme-active)
    --btn-color-active var(--theme-color-active)
    color var(--theme-color)
    font-weight calc(400 * var(--theme-weight-factor))
    &[disabled]
      --btn-color-disabled var(--theme-color-disabled)
  &.btn-danger
    --btn-bg var(--danger)
    --btn-bg-hover var(--danger-hover)
    --btn-bg-active var(--danger-active)
    --btn-color-active var(--danger-color-active)
    color var(--danger-color)
    &[disabled]
      --btn-color-disabled var(--danger-color-disabled)
  &.btn-link
    color var(--theme)
    --btn-color-active var(--theme-hover)
    font-weight calc(800 * var(--weight-factor))
  ui-loader
    --ui-loader-size 16px
