@keyframes ui-loader-offset
  0%
  100%
    stroke-dashoffset 200
  50%
    stroke-dashoffset 100
@keyframes ui-loader-rotate
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
ui-loader
  --ui-loader-size 64px
  position relative
  display inline-block
  height var(--ui-loader-size)
  width var(--ui-loader-size)
  svg
    width 100%
    height 100%
    rotate 90deg
    &.ui-loder-loading
      animation ui-loader-rotate .6s linear infinite
      path
        animation ui-loader-offset 2s linear infinite
  path
    stroke var(--theme)
    stroke-linecap round
    stroke-width 10%
    stroke-dashoffset 0
    stroke-dasharray 200
