@keyframes page-in
  from
    opacity 0
    translate 0 50px
  to
    opacity 1
    translate 0 0px
.page
  &>*
    display none
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    overflow hidden auto
    padding 64px 0
.page-current
  display block
  opacity 1
  pointer-events all
  animation page-in .2s ease-out
.page-hidding
  opacity 0
  transition .1s opacity
