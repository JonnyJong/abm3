@keyframes page-in
  from
    opacity 0
    translate 0 50px
  to
    opacity 1
    translate 0 0px
.page
  &>*
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    overflow hidden auto
    opacity 0
    pointer-events none
    transition .1s opacity
    padding 64px 0
.page-current
  opacity 1
  pointer-events all
  animation page-in .2s ease-out
