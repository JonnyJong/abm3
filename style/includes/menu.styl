.menu-shell
  position fixed
  z-index 10
  border-radius 6px
  overflow hidden
  height 0px
  width var(--w)
  opacity 0
  pointer-events none
.menu-show-top
.menu-show-bottom
  opacity 1
  pointer-events all
  height var(--h)
  transition .3s height cubic-bezier(0, 1, 0, 1)
  box-shadow 0 0 8px #0008
.menu-show-top
  .menu
    bottom 0
.menu-show-bottom
  .menu
    top 0
.menu-hide
  opacity 0
  pointer-events none
  transition .1s opacity
.menu
  position absolute
  left 0
  display flex
  flex-direction column
  background var(--bg-tsp)
  backdrop-filter blur(10px)
  min-width 300px
  padding 2px 0
.menu-item
  margin 2px 4px
.menu-normal
  display flex
  align-items center
  padding 6px 10px
  gap 10px
  border-radius 2px
  &:hover
    background var(--menu-hover)
  &:active
    background var(--menu-active)
  .menu-item-name
    flex 1
    line-height 1
.menu-separator
  height 1px
  background var(--menu-separator)

.menu-hider
  position fixed
  z-index 10
  top 0
  left 0
  height 100vh
  width 1000vw
  pointer-events none
.menu-hider-show
  pointer-events all
